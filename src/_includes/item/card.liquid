<article class="card |{% for root in item.data.vocab %} h-{{ root }}{% endfor %}">
  <header>
    <h3 class="p-name">
      <a class="u-url" rel="bookmark" href="{{ item.url }}">{{ item.data.title | markdown: 'inline' }}</a>
    </h3>
  </header>

  {%- if item.data.summary -%}
  <div class="p-summary">
    {{ item.data.summary | markdown }}
  </div>
  {%- endif -%}
</article>
